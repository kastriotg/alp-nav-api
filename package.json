{
  "name": "alp-nav-api-public-assets",
  "version": "1.0.0",
  "description": "Build tools for compiling CSS and JS in the public folder of AlpNav API plugin.",
  "scripts": {
    "build:scss": "npx sass public/css/alp-nav-api-public.scss public/css/alp-nav-api-public.min.css --source-map",
    "build:css": "npm run build:scss && npx postcss public/css/alp-nav-api-public.min.css -o public/css/alp-nav-api-public.min.css",
    "build:js": "npx esbuild public/js/*.js --outdir=public/js/dist --minify",
    "build": "npm run build:css && npm run build:js",
    "watch:scss": "npx sass --watch public/css/alp-nav-api-public.scss:public/css/alp-nav-api-public.min.css --source-map",
    "watch:css": "npx postcss public/css/alp-nav-api-public.min.css -o public/css/alp-nav-api-public.min.css --watch",
    "watch": "npx npm-run-all --parallel watch:scss watch:css"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.21.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "sass": "^1.69.5"
  },
  "dependencies": {
    "cssnano": "^7.1.0"
  }
}
